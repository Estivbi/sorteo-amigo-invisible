---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Crear un Juego">
  <div class="container mx-auto">
    <h1 class="text-4xl font-bold text-center my-8">Crear un Juego</h1>
    <p class="text-center mb-8">
      Aquí puedes iniciar un nuevo juego de Amigo Invisible.
    </p>
    <form
      id="create-game-form"
      class="max-w-lg mx-auto bg-white p-8 shadow-md rounded-lg"
    >
      <div class="mb-4">
        <label for="gameName" class="block text-gray-700 font-bold mb-2"
          >Nombre del Juego:</label
        >
        <input
          type="text"
          id="gameName"
          name="gameName"
          class="w-full p-2 border border-gray-300 rounded-md"
          required
        />
      </div>
      <div class="mb-4">
        <label for="budget" class="block text-gray-700 font-bold mb-2"
          >Presupuesto:</label
        >
        <input
          type="number"
          id="budget"
          name="budget"
          class="w-full p-2 border border-gray-300 rounded-md"
          required
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2">
          Participantes:
        </label>
        <div id="participants-list"></div>
        <button type="button" id="add-participant" class="mt-2 bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600">Añadir participante</button>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2">
          Excepciones:
        </label>
        <div id="exceptions-list"></div>
        <button type="button" id="add-exception" class="mt-2 bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600">Añadir excepción</button>
      </div>
      <div class="mb-4">
        <label for="customMessage" class="block text-gray-700 font-bold mb-2">Mensaje Personalizado (opcional):</label>
        <textarea id="customMessage" name="customMessage" class="w-full p-2 border border-gray-300 rounded-md" rows="4"></textarea>
      </div>
      <button
        type="submit"
        class="w-full bg-blue-600 text-white p-2 rounded-md hover:bg-blue-700"
        >Crear Juego</button
      >
    </form>
    <!-- Modal de éxito -->
    <div id="success-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-40 z-50 hidden">
      <div class="bg-white rounded-lg shadow-lg p-8 max-w-md text-center">
        <h2 class="text-2xl font-bold mb-4 text-green-600">¡Juego creado con éxito!</h2>
        <p class="mb-6">Los correos han sido enviados a todos los participantes.</p>
        <button id="close-modal" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Cerrar</button>
      </div>
    </div>
    <!-- Spinner de carga -->
    <div id="loading-spinner" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-40 z-50 hidden">
      <div class="flex flex-col items-center">
        <svg class="animate-spin h-12 w-12 text-blue-600 mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
        </svg>
        <span class="text-white text-lg">Enviando correos...</span>
      </div>
    </div>
  </div>
</Layout>

<script type="module" src="scripts/formHandler.js" defer></script>
