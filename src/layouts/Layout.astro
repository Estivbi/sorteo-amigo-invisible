---
import "../styles/global.css"

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Amigo Invisible" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100 text-gray-900 min-h-screen flex flex-col">
    <header class="bg-blue-400 text-gray-800 p-4">
      <h1 class="text-2xl font-bold">Amigo Invisible</h1>
    </header>
    <main class="flex-grow p-4">
      <slot />
    </main>
    <footer class="bg-blue-400 text-gray-800 p-4 text-left">
      <p>&copy; 2024 Amigo Invisible. Todos los derechos reservados</p>
    </footer>
  </body>
</html>
